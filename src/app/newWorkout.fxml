<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="710.0" prefWidth="880.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.NewWorkoutController">
   <left>
      <VBox prefHeight="710.0" prefWidth="230.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="73.0" prefWidth="230.0" text="Create New Workout">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <VBox prefHeight="42.0" prefWidth="171.0">
               <children>
                  <Label text="Date">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="datePicker" prefHeight="29.0" prefWidth="171.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Time">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="timeTextField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="28.0" prefWidth="80.0" promptText="20:00:00" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Duration (minutes)">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="durationSpinner" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Shape">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="shapeSpinner" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Performance">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="performanceSpinner" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Note">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="noteTextArea" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="35.0" prefWidth="230.0" spacing="10.0">
               <children>
                  <Button fx:id="discardButton" mnemonicParsing="false" onAction="#discardButtonPressed" text="Discard" />
                  <Button fx:id="createButton" mnemonicParsing="false" onAction="#createButtonPressed" text="Create" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin>
      </VBox>
   </left>
</BorderPane>
