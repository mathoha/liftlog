<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane prefHeight="278.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.AddEquipmentController">
   <header>
      <Label alignment="CENTER" prefHeight="63.0" prefWidth="360.0" text="Add Equipment" textAlignment="CENTER">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
   </header>
   <content>
      <VBox prefHeight="166.0" prefWidth="360.0" spacing="10.0">
         <children>
            <Label text="Name">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TextField fx:id="name" prefHeight="26.0" prefWidth="191.0" promptText="Squat rack" />
            <Label text="Description">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TextArea fx:id="description" prefHeight="100.0" prefWidth="338.0" promptText="Awesome squat rack for deep squatting" wrapText="true" />
            <HBox alignment="BOTTOM_RIGHT" prefHeight="103.0" prefWidth="338.0">
               <children>
                  <Button fx:id="saveButton" alignment="CENTER" mnemonicParsing="false" onAction="#saveEquipment" prefHeight="26.0" prefWidth="76.0" text="Save" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</DialogPane>
